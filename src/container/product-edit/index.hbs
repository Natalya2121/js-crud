<main>
  <section>
    {{#with data}}
    <div class="form">
      <h1 class="form__title">Редагування товару</h1>
      <form method="post" action="/product-edit">
        <div class="form__content">
          <h2 class="form__title2">Інформація про товар</h2>
          <div class="form__content_col">
            <div class="form__field">
              <label for="name" class="form__label">Назва товару</label>
              <input type="name" name="name" class="form__input" value="{{name}}">
            </div>
            <div class="form__field">
              <label for="price" class="form__label">Ціна</label>
              <input type="price" name="price" class="form__input" value="{{price}}">
            </div>
            <div class="form__field">
              <label for="id" class="form__label">ID</label>
              <input type="id" name="id" class="form__input" value="{{id}}">
            </div>
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__input_descript" value="{{description}}">
            <label class="form__label_footer">Відображається у картці товару</label>
          </div>
          <div class="form__footer">
            <button class="form__button">Зберегти оновлення</button>
            <button class="form__button form__button-Red" formaction="/product-delete?id={{id}}" formmethod="get" type="submit">Видалити товар</button>
          </div>
        </div>
      </form>
    </div>
    {{/with}}
  </section>
  

</main>
